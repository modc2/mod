# IPFS Storage System - Environment Configuration Template
# Copy this file to .env and update the values as needed

# Server Configuration
IPFS_HOST=0.0.0.0
IPFS_PORT=8003
IPFS_DEBUG=false

# IPFS Configuration
IPFS_API_URL=http://127.0.0.1:5001
IPFS_GATEWAY_URL=http://127.0.0.1:8080
IPFS_API_PORT=5001
IPFS_GATEWAY_PORT=8080
IPFS_SWARM_PORT=4001
IPFS_REPO_PATH=.ipfs
IPFS_TIMEOUT=30

# Database Configuration
IPFS_DATABASE_URL=sqlite:///./files.db

# Security Configuration (Optional)
IPFS_SECRET_KEY=your-secret-key-here
IPFS_ALGORITHM=HS256
IPFS_ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
IPFS_MAX_FILE_SIZE=104857600  # 100MB in bytes
IPFS_ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,mp4,mp3,doc,docx,zip,tar,gz

# IPFS Application Configuration
IPFS_APP_NAME="IPFS Storage System"
IPFS_VERSION=0.1.0
